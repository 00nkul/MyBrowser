<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/tvInputURL"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1.80"
                android:background="@null"
                android:drawablePadding="10dp"
                android:hint="Search or Enter Web Address"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/ic_baseline_search_24" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="714dp"
        android:layout_weight="1.8">

    </WebView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="#4D7A7A7A"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnTwitter"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/ic_twiter" />

            <Button
                android:id="@+id/btnInsta"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/ic_insta" />

            <Button
                android:id="@+id/btnHome"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/ic_baseline_home_24" />

            <Button
                android:id="@+id/btnFb"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/ic_fb" />

            <Button
                android:id="@+id/btnYoutube"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/ic_yt" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>